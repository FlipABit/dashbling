{
  "name": "@dashbling/core",
  "version": "0.3.0",
  "author": "Pascal Widdershoven",
  "description": "Hackable React based dashboards for developers",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pascalw/dashbling.git"
  },
  "bin": {
    "dashbling": "./lib/cli.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon --config ./nodemon.json --watch src/ --exec 'bash -c' 'cd example && ts-node ../src/cli.ts start'",
    "test": "yarn run --silent build && jest",
    "test:watch": "jest --watch",
    "test:e2e": "./script/e2e-tests.sh",
    "build": "./node_modules/.bin/tsc -p .",
    "prepare": "yarn run --silent build && chmod +x lib/cli.js && cp ../../README.md ."
  },
  "files": [
    "/client/",
    "/example/",
    "/lib/",
    "/src/"
  ],
  "dependencies": {
    "@hapi/hapi": "18.3.1",
    "commander": "^2.12.2",
    "@hapi/basic": "^5.1.0",
    "@hapi/inert": "^5.2.0",
    "node-cron": "^1.2.1",
    "node-fetch": "^2.5.0",
    "tracer": "^0.9.8"
  },
  "engines": {
    "node": ">= 10"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.1.4",
    "jest": "^24.8.0",
    "nodemon": "^1.18.9",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.3.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)test)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
